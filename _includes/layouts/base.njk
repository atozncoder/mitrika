    <script type="application/ld+json">
    {
        "@context": "http://schema.org/",
        "@type": "Person",
        "name": "Aleksandar Zlatkovic",
        "alternateName": "Aca, atozncoder, aleksandarzlatkovic, gospodinno",
        "url": "https://www.mamatatamata.com",
        "image": "",
        "sameAs": [
            "https://github.com/atozncoder",
            "https://twitter.com/TODO",
            "https://www.linkedin.com/in/aleksandarzlatkovic/",
            "https://news.ycombinator.com/user?id=TODO"=,
            "https://www.facebook.com/gospodinno?ref=bookmarks",
            "https://www.instagram.com/aleksandar.zlatkovic/"
        ]
    }
    </script>

    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script>
      MathJax = {
        tex: {inlineMath: [['$', '$'], ['\\(', '\\)']]},
        chtml: {
          scale: 1.2,
          fontURL: '/fonts/roboto.tds'
        },
        startup: {
          ready: () => {
            console.log(MathJax);
            MathJax.startup.defaultReady();
            console.log('MathJax is initialized, and the initial typeset is queued');
          }
        }
      };

    </script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js"></script>

  </head>
  <body class="center">
    <header>
    <ul class="nav">
      {%- for nav in collections.nav | reverse -%}
        {% if nav.url == '/' %}
        <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}">
          <a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a>
        </li>
        {% elseif nav.url == '/about/' %}
        <li class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}">
          <a href="{{ nav.url | url }}">aleksandarzlatkovic</a>
        </li>
        {% endif %}
      {%- endfor -%}

    </ul>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
